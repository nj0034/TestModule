{
  "meta": {
    "site_name": "링커리어",
    "site_url": "http://linkareer.com",
    "site_type": "html",
    "type": "공모전_대외활동",
    "version": "1",
    "ES_index": "activity"
  },
  "parser": {
    "method": "scroll_down",
    "version": "1",
    "period": "15m",
    "stop": "size",
    "interval": "5-10"
  },
  "rule": {
    "page_url_list": ["http://linkareer.com/list/contest", "http://linkareer.com/list/activity"],
    "properties": {
      "title_url": {
        "type": "url",
        "xpath": "/html/body/div[5]/div[3]/a[*]",
        "position": "",
        "param_regex": "",
        "base_url": ""
      },
      "title": {
        "type": "text",
        "class_name": "activity-name",
        "position": "in"
      },
      "host": {
        "type": "text",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody/tr[2]/td",
        "position": "in"
      },
      "start_datetime": {
        "type": "date",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody",
        "regex": "(\\d+\\.\\d+\\.\\d+)\\s~",
        "format": "%Y.%m.%d",
        "position": "in"
      },
      "end_datetime": {
        "type": "date",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody",
        "regex": "~\\s(\\d+\\.\\d+\\.\\d+)",
        "format": "%Y.%m.%d",
        "position": "in"
      },
      "created_datetime": {
        "type": "date",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[1]/div/div/span[3]",
        "format": "%Y.%m.%d",
        "attach": "20",
        "position": "in"
      },
      "content": {
        "type": "content",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/ul",
        "position": "in"
      },
      "target": {
        "type": "text",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody",
        "regex": "대상.*\\s*<td>(.*)</td>",
        "position": "in"
      },
      "benefit": {
        "type": "text",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody",
        "regex": "특전.*\\s*<td>(.*)</td>",
        "position": "in"
      },
      "poster": {
        "type": "poster",
        "url": "href",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[1]/div/a",
        "position": "in"
      },
      "home_url": {
        "type": "url",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody/tr[9]/td/a",
        "position": "in"
      },
      "attach": {
        "type": "file",
        "xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody/tr[10]/td/p/a",
        "position": "in",
        "name_regex": "<a.*>(.*)<\/a>",
        "HTML_xpath": "//*[@id=\"Main\"]/section[2]/div/div/div[2]/div[2]/table/tbody/tr[10]/td/p/a"
      }
    },
    "post_processing": {}
  }
}