{
    "meta": {
        "site_name": "유학대학",
        "site_url": "http://scos.skku.edu/scos/menu_4/sub_04_01_01.jsp?mode=list&board_no=69&pager.offset=0",
        "site_type": "html",
        "category": "유학대학",
        "version": "1"
    },

    "parser": {
        "method": "url_based",
        "version": "1",
        "period": "15m",
        "stop": "size",
        "interval": "5-10"
    },

    "rule": {
        "page_url": "http://scos.skku.edu/scos/menu_4/sub_04_01_01.jsp?mode=list&board_no=69&pager.offset={page}0",
        "start_page": 0,
        "page_increase": 1,
        "properties": {
            "title_url": {
                "type": "url",
                "xpath": "//*[@id=\"item_body\"]/div[1]/div[2]/div/div[2]/div[2]/div[2]/div/div[2]/table/tbody/tr[*]/td[2]/a",
                "position": "",
                "param_regex": "",
                "base_url": ""
            },
            "title": {
                "type": "text",
                "xpath": "//*[@id=\"item_body\"]/div[1]/div[2]/div/div[2]/div[2]/div[2]/div/div[1]/table/tbody/tr[1]/td",
                "position": "in"
            },
            "date": {
                "type": "date",
                "xpath": "//*[@id=\"item_body\"]/div[1]/div[2]/div/div[2]/div[2]/div[2]/div/div[1]/table/tbody/tr[2]/td[2]",
                "format": "%Y-%m-%d",
                "position": "in"
            },
            "writer": {
                "type": "text",
                "xpath": "//*[@id=\"item_body\"]/div[1]/div[2]/div/div[2]/div[2]/div[2]/div/div[1]/table/tbody/tr[2]/td[1]",
                "position": "in"
            },
            "hit": {
                "type": "text",
                "xpath": "//*[@id=\"item_body\"]/div[1]/div[2]/div/div[2]/div[2]/div[2]/div/div[1]/table/tbody/tr[2]/td[3]",
                "position": "in"
            },
            "content": {
                "type": "content",
                "xpath": "//*[@id=\"article_text\"]",
                "position": "in"
            },
            "img": {
                "type": "image",
                "xpath": "//*[@id=\"article_text\"]/p[*]/img",
                "position": "in"
            },
            "attach": {
                "type": "file",
                "xpath": "//*[@id=\"item_body\"]/div[1]/div[2]/div/div[2]/div[2]/div[2]/div/div[1]/table/tbody/tr[3]/td/ul/li[*]/a",
                "position": "in",
                "base_url": "",
                "param_regex": "",
                "name_regex": "title=\"(.*) 다운로드\"",
                "HTML_xpath": "//*[@id=\"item_body\"]/div[1]/div[2]/div/div[2]/div[2]/div[2]/div/div[1]/table/tbody/tr[3]/td/ul"
            }
        },
        "post_processing": {

        }
    }
}